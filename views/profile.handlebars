<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-posts-form">
      <div class="form-group">
        <label for="posts-name">Post Name:</label>
        <input class="form-input" type="text" id="posts-name" name="posts-name" />
      </div>
      {{!-- <div class="form-group">
        <label for="project-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="project-funding" name="project-funding" />
      </div> --}}
      <div class="form-group">
        <label for="posts-desc">Description:</label>
        <textarea class="form-input" id="posts-desc" name="posts-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 posts-list">
    <h3>Current Posts:</h3>

   {{#each posts as |posts| }}
<div class="row mb-4 posts">
  <div class="col-md-5">
    <h2>    
      <a href="/posts/{{posts.id}}">{{posts.name}}</a>
    </h2>
  
    <p>Created by {{posts.user.name}} on {{format_date posts.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{posts.description}}
    </p>
  </div>
</div>
{{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>